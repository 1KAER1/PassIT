<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Najbliższe zadania i zaliczenia"
            android:textColor="@color/textColorDarken"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="380dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/test1"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="Button"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/test2"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="Button"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/test3"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="Button"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="NAJBLIŻSZE ZADANIA"
            android:textColor="@color/textColorDarken"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="380dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/task1"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="ZADANIE 1"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/task2"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="ZADANIE 2"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/task3"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/basic_button"
                    android:text="ZADANIE 3"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/subjectsBtn"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/basic_button"
            android:text="MOJE PRZEDMIOTY"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.837"
            app:layout_constraintStart_toEndOf="@+id/scheduleBtn"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

        <Button
            android:id="@+id/scheduleBtn"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/basic_button"
            android:text="PLAN ZAJĘĆ"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

        <Button
            android:id="@+id/openTasksBtn"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_button"
            android:text="MOJE ZADANIA"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleBtn" />

        <Button
            android:id="@+id/testsButton"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_button"
            android:text="MOJE ZALICZENIA"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.654"
            app:layout_constraintStart_toEndOf="@+id/openTasksBtn"
            app:layout_constraintTop_toBottomOf="@+id/subjectsBtn" />

        <Button
            android:id="@+id/calendarBtn"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_button"
            android:text="KALENDARZ"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/openTasksBtn" />

        <Button
            android:id="@+id/alertBtn"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_button"
            android:text="POWIADOMIENIA"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toEndOf="@+id/calendarBtn"
            app:layout_constraintTop_toBottomOf="@+id/testsButton" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:text="MENU"
            android:textColor="@color/textColorDarken"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

